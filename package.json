{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "TS template",
  "main": "dist/app.js",
  "scripts": {
    "start": "npm run dev:start",
    "dev": "node .",
    "dev:start": "npm-run-all build dev",
    "build": "npm-run-all clean lint sass tsc copy-assets",
    "copy-assets": "ts-node tools/copyAssets",
    "tsc": "tsc",
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "sass": "node-sass src/public/scss -o dist/public/css",
    "comp-assets": "npm-run-all sass copy-assets"
  },
  "author": "DEGREVE-NAILLON Clement",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "i18n": "^0.13.3",
    "mysql2": "^2.3.0",
    "node-sass": "^6.0.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.0.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/i18n": "^0.13.1",
    "@types/node": "^16.11.6",
    "@types/node-sass": "^4.11.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}